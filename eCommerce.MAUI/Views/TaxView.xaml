<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eCommerce.MAUI.Views.TaxView"
             Title="TaxView"
             >
    <VerticalStackLayout>
        <Label Text="Tax Rate (%)" />
        <Entry Text="{Binding TaxRate, Mode=TwoWay}" Keyboard="Numeric" />
        <Button
        Text="Set Tax Rate"
        Clicked="SetTaxClicked"/>   
        <Button
        Text="Cancel"
        Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>